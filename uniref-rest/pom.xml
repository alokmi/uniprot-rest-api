<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
   <parent>
        <groupId>org.uniprot</groupId>
        <artifactId>uniprot-rest-api</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <groupId>org.uniprot</groupId>
    <artifactId>uniref-rest</artifactId>
    <version>0.0.2-SNAPSHOT</version>
    <name>uniref-rest</name>
    <description>UniRef Rest API</description>

    <properties>
        <core.version>0.1-SNAPSHOT</core.version>
        <uniprot-search.version>1.0-SNAPSHOT</uniprot-search.version>
        <common-rest.version>0.0.2-SNAPSHOT</common-rest.version>
        <support-data.version>0.0.2-SNAPSHOT</support-data.version>
         <dropwizard.metrics.version>3.2.6</dropwizard.metrics.version>
    </properties>

    <dependencies>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
               <dependency>
            <groupId>io.dropwizard.metrics</groupId>
            <artifactId>metrics-core</artifactId>
            <version>${dropwizard.metrics.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>xml-parser</artifactId>
            <version>${core.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>core-parser</artifactId>
            <version>${core.version}</version>
        </dependency>
        <dependency>
            <groupId>org.uniprot</groupId>
            <artifactId>common-rest</artifactId>
            <version>${common-rest.version}</version>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.uniprot</groupId>
            <artifactId>common-rest</artifactId>
            <version>${common-rest.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.uniprot</groupId>
            <artifactId>uniprot-indexer-integration-test</artifactId>
            <version>${uniprot-search.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- allows executable jar with embedded jetty to be created through,
                "mvn package" command -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>repackage</id>
                        <configuration>
                            <classifier>exec</classifier>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>${maven-dependency-plugin.version}</version>
                <executions>
                    <execution>
                        <id>unpack-dependencies</id>
                        <phase>generate-test-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.uniprot</groupId>
                                    <artifactId>uniprot-index-config</artifactId>
                                    <version>${uniprot-search.version}</version>
                                    <type>tar.gz</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/test-classes</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
